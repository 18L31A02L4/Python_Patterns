number = 4

# Right Angle Triangle
for i in range(1, number + 1):
    print("* " * i)

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Inverted Right Angle Triangle
for i in range(number, 0, -1):
    print("* " * i)

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Square
for j in range(number):
    print("*  " * number)

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Pyramid
for i in range(number):
    print(" " * (number - i - 1) + "* " * (i + 1))

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Inverted Pyramid
for i in range(number, 0, -1):
    print(" " * (number - i) + "* " * i)

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Right Sided Triangle
for i in range(number):
    print("  " * (number - i - 1) + "* " * (i + 1))

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Inverted Right Sided Triangle
for i in range(number, 0, -1):
    print("  " * (number - i) + "* " * i)

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Hill Pattern
for i in range(number):
    print("  " * (number - (i + 1)) + "* " * (2 * i + 1))

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Inverted Hill Pattern
for i in range(number, 0, -1):
    print("  " * (number - i) + "* " * (2 * i - 1))

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Diamond Pattern
for i in range(number):
    print("  " * (number - (i + 1)) + "* " * (2 * i + 1))
for j in range(number - 1, 0, -1):
    print("  " * (number - j) + "* " * (2 * j - 1))

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Left Pascal's Triangle
for i in range(number):
    print("* " * (i + 1))
for j in range(number - 1, 0, -1):
    print("* " * j)

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Right Pascal's Triangle
for i in range(number):
    print("  " * (number - i - 1) + "* " * (i + 1))
for j in range(number - 1, 0, -1):
    print("  " * (number - j) + "* " * j)

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Sand Glass
for i in range(number, 0, -1):
    print(" " * (number - i) + "* " * i)
for j in range(1, number):
    print(" " * (number - j - 1) + "* " * (j + 1))

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# ButterFly
for i in range(number):
    print("* " * (i + 1) + 2 * ("  " * (number - i - 1)) + "* " * (i + 1))
for j in range(number - 1, 0, -1):
    print("* " * j + 2 * ("  " * (number - j)) + "* " * j)

print("<------------------------>")

# -------------------------------------------------------------------------------------------
# Double hill
for i in range(number):
    print(" " * (number - i - 1) + "* " * (i + 1) + "  " * (number - i - 1) + "* " * (i + 1))

print("<------------------------>")
